<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>AddBook</servlet-name>
        <servlet-class>servlets.AddBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCopyOfBook</servlet-name>
        <servlet-class>servlets.AddCopyOfBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPublisher</servlet-name>
        <servlet-class>servlets.AddPublisher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>servlets.AddUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckUser</servlet-name>
        <servlet-class>servlets.CheckUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCopyOfBook</servlet-name>
        <servlet-class>servlets.DeleteCopyOfBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteBook</servlet-name>
        <servlet-class>servlets.DeleteBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePublisher</servlet-name>
        <servlet-class>servlets.DeletePublisher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExportOneLine</servlet-name>
        <servlet-class>servlets.ExportOneLine</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddBook</servlet-name>
        <url-pattern>/AddBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCopyOfBook</servlet-name>
        <url-pattern>/AddCopyOfBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPublisher</servlet-name>
        <url-pattern>/AddPublisher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/AddUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckUser</servlet-name>
        <url-pattern>/CheckUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCopyOfBook</servlet-name>
        <url-pattern>/DeleteCopyOfBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteBook</servlet-name>
        <url-pattern>/DeleteBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePublisher</servlet-name>
        <url-pattern>/DeletePublisher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExportOneLine</servlet-name>
        <url-pattern>/ExportOneLine</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
